{
    "compileOnSave":   false,
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
    "compilerOptions": {
        "target":                       "es2017",
        "module":                       "commonjs",
        "jsx":                          "preserve",
        "moduleResolution":             "node",
        "allowSyntheticDefaultImports": true,
        "noUnusedLocals":               true,
        "noUnusedParameters":           true,
        "removeComments":               false,
        "preserveConstEnums":           true,
        "sourceMap":                    true,
        "skipLibCheck":                 true,
        "baseUrl":                      ".",
        "experimentalDecorators":       true,
        "emitDecoratorMetadata":        true,
        "noImplicitAny":                false,
        "outDir":                       "dist/",
        "pretty":                       true,
        "lib":                          [
            "es2017.object",
            "es2015",
            "es2017",
            "esnext",
            "dom"
        ],
        "typeRoots":                    [
            "./node_modules/@types"
        ],
        "types":                        [
            "node",
            "reflect-metadata"
        ]
    }
}
